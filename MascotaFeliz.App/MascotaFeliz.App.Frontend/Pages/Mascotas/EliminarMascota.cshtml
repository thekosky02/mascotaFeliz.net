@page
@model MascotaFeliz.App.Frontend.Pages.EliminarMascotaModel
@{
    ViewData["Title"] = "Eliminar Mascota";
}
<div class="container">

    <div class="card mi-w-card my-5">
        <h5 class="card-header">Eliminar Mascota</h5>
        <div class="card-body">
            <p class="card-text">Está seguro que desea eliminar a @Model.mascota.Nombre?, tenga en cuanta que esta acción es irreversible.</p>
            <form method="post">
                <input type="hidden" asp-for="mascota.Id">
                <a asp-page="./ListaMascotas" class="btn btn-info mr-3">
                    <img src="~/images/arrow-go-back-fill.png" alt="Regresar">
                </a>
                <button type="submit" class="btn btn-danger float-right">
                    <img src="~/images/delete-bin-2-fill.png" alt="Eliminar">
                </button>
            </form>
        </div>
    </div>
</div>
