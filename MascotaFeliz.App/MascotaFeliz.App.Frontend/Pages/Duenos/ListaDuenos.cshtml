@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
    ViewData["Title"] = "Lista Dueños";
}
<div class="container">
    <h2 class="mt-3">Lista Dueños</h2>

    <div class="d-flex justify-content-between mt-3">
        <a class="btn btn-primary" asp-page="./CrearEditarDueno">
            <img src="~/images/add-line.png" alt="Agregar Dueño">
        </a>
            
        <form class="input-group w-50" method="get">
            <input type="text" class="form-control" asp-for="@Model.NombreDueno" placeholder="Ingresar Nombre">
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">
                    <img src="~/images/search-line.png" alt="Buscar">
                </button>
            </div>
        </form>
    </div>
    
    <div class="table-responsive mt-3">
        <table class="table table-striped text-center">

            <tr>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Opciones</th>
            </tr>

            @foreach (var dueno in Model.ListaDuenos)
            {
                <tr>
                    <td>@dueno.Cedula</td>
                    <td>@dueno.Nombres</td>
                    <td>@dueno.Apellidos</td>

                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-info mx-1" type="button" data-toggle="popover" data-placement="top" data-content="Detalles dueño" data-trigger="hover" asp-page="./DetallesDueno" asp-route-duenoId="@dueno.Id">
                                <img src="~/images/user-fill.png" alt="Detalles">
                            </a>
                            <a class="btn btn-info mx-1" type="button" data-toggle="popover" data-placement="top" data-content="Editar dueño" data-trigger="hover" asp-page="./CrearEditarDueno" asp-route-duenoId="@dueno.Id">
                                <img src="~/images/edit-2-fill.png" alt="Editar">
                            </a>
                            <a class="btn btn-danger mx-1" type="button" data-toggle="popover" data-placement="top" data-content="Eliminar dueño" data-trigger="hover" asp-page="./EliminarDueno" asp-route-duenoId="@dueno.Id">
                                <img src="~/images/delete-bin-2-fill.png" alt="Eliminar">
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>