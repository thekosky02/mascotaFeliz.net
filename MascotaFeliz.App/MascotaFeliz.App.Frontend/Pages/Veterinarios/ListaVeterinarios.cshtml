@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
    ViewData["Title"] = "Lista Veterinarios";
}
<div class="container">
    <h2 class="mt-3">Lista Veterinarios</h2>

    <div class="d-flex justify-content-between mt-3">
        <a class="btn btn-primary" asp-page="./CrearEditarVeterinario">
            <img src="~/images/add-line.png" alt="Agregar Dueño">
        </a>
            
        <form class="input-group w-50" method="get">
            <input type="text" class="form-control" asp-for="@Model.NombreVeterinario" placeholder="Ingresar Nombre">
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">
                    <img src="~/images/search-line.png" alt="Buscar">
                </button>
            </div>
        </form>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped text-center">

            <tr>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apelidos</th>
                <th>Opciones</th>
            </tr>

            @foreach (var veterinario in Model.ListaVeterinarios)
            {
                <tr>
                    <td>@veterinario.Cedula</td>
                    <td>@veterinario.Nombres</td>
                    <td>@veterinario.Apellidos</td>

                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-info mx-1" type="button" data-toggle="popover" data-placement="top" data-content="Detalles Veterinario" data-trigger="hover" asp-page="./DetallesVeterinario" asp-route-veterinarioId="@veterinario.Id">
                                <img src="~/images/user-fill.png" alt="Detalles">
                            </a>
                            <a class="btn btn-info mx-1" type="button" data-toggle="popover" data-placement="top" data-content="Editar Veterinario" data-trigger="hover" asp-page="./CrearEditarVeterinario" asp-route-veterinarioId="@veterinario.Id">
                                <img src="~/images/edit-2-fill.png" alt="Editar">
                            </a>
                            <a class="btn btn-danger mx-1" type="button" data-toggle="popover" data-placement="top" data-content="Eliminar Veterinario" data-trigger="hover" asp-page="./EliminarVeterinario" asp-route-veterinarioId="@veterinario.Id">
                                <img src="~/images/delete-bin-2-fill.png" alt="Eliminar">
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
